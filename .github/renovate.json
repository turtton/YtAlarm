{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": [
    "after 1pm and before 11pm"
  ],
  "automergeSchedule": [
    "after 1pm and before 12am"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "dependencies (minor/patch)",
      "rangeStrategy": "pin",
      "automerge": true
    }
  ]
}
